<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.IntroFragment">

        <View
            android:id="@+id/view_gradation"
            android:layout_width="300dp"
            android:layout_height="match_parent"

            android:background="@drawable/left_tilted_grad_rec"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="100dp"
            android:layout_marginTop="53dp"


            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/orbitron_extrabold"


            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"

            tools:text="완주 실패"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="100dp"
            android:layout_marginTop="17dp"


            android:textSize="22dp"
            android:textColor="@color/black"
            android:fontFamily="@font/orbitron_bold"
            android:letterSpacing="0.1"

            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"

            tools:text="01:02:06"
            />

        <TextView
            android:id="@+id/tv_next_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="33dp"
            android:layout_marginBottom="33dp"
            android:layout_marginTop="22dp"
            android:text="@string/NEXT"
            android:fontFamily="@font/orbitron_bold"
            android:textColor="@color/white"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"

            android:paddingStart="21dp"
            android:paddingEnd="21dp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            app:layout_constraintVertical_bias="1"

            android:background="@drawable/shape_start_button"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>