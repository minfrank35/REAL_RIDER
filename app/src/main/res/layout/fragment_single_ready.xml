<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.login.IntroFragment">

        <com.inandout.real_rider.comm.CommTitleBar
            android:id="@+id/comm_title_bar_single"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:title="SINGLE"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <View
            android:id="@+id/background_gray"
            android:layout_width="match_parent"
            android:layout_height="190dp"

            android:background="@color/color_0E0E0E_10"

            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/comm_title_bar_single"
            app:layout_constraintBottom_toBottomOf="parent"
            />
        
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_player1"
            android:layout_width="173dp"
            android:layout_height="247dp"

            android:layout_marginEnd="20dp"

            android:background="@drawable/shape_user_ready"
            app:layout_constraintHorizontal_chainStyle="packed"

            app:layout_constraintTop_toTopOf="@id/background_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/background_gray"
            app:layout_constraintEnd_toStartOf="@id/cl_player2"
            >

            <TextView
                android:id="@+id/tv_player1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="14dp"
                android:text="@string/PLAYER1"
                android:textSize="17dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_user_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="14dp"
                android:textSize="17dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                tools:text="철수"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_player2"
            android:layout_width="173dp"
            android:layout_height="247dp"

            android:layout_marginEnd="20dp"

            android:background="@drawable/shape_user_ready"
            app:layout_constraintTop_toTopOf="@id/background_gray"
            app:layout_constraintStart_toEndOf="@id/cl_player1"
            app:layout_constraintBottom_toBottomOf="@id/background_gray"
            app:layout_constraintEnd_toStartOf="@id/cl_player3"

            >

            <TextView
                android:id="@+id/tv_player2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="14dp"
                android:text="@string/PLAYER2"
                android:textSize="17dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_user_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="14dp"
                android:textSize="17dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                tools:text="철수"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_player3"
            android:layout_width="173dp"
            android:layout_height="247dp"

            android:layout_marginEnd="20dp"

            android:background="@drawable/shape_user_ready"
            app:layout_constraintTop_toTopOf="@id/background_gray"
            app:layout_constraintStart_toEndOf="@id/cl_player2"
            app:layout_constraintBottom_toBottomOf="@id/background_gray"
            app:layout_constraintEnd_toStartOf="@id/cl_player4"

            >

            <TextView
                android:id="@+id/tv_player3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="14dp"
                android:text="@string/PLAYER3"
                android:textSize="17dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"

                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                />

            <TextView
                android:id="@+id/tv_user_name3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="14dp"
                android:textSize="17dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"

                tools:text="철수"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_player4"
            android:layout_width="173dp"
            android:layout_height="247dp"
            android:background="@drawable/shape_user_ready"
            app:layout_constraintBottom_toBottomOf="@id/background_gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/cl_player3"
            app:layout_constraintTop_toTopOf="@id/background_gray">

            <TextView
                android:id="@+id/tv_player4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginTop="14dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"
                android:text="@string/PLAYER4"
                android:textSize="17dp"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_user_name4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_marginBottom="14dp"
                android:fontFamily="@font/orbitron_bold"
                android:letterSpacing="0.1"
                android:textSize="17dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"

                tools:text="철수" />
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_ready_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginEnd="21dp"
            android:background="@drawable/shape_ranking_list"
            android:fontFamily="@font/orbitron_bold"
            android:includeFontPadding="false"
            android:letterSpacing="0.1"

            android:paddingStart="21dp"
            android:paddingTop="12dp"
            android:paddingEnd="21dp"
            android:paddingBottom="12dp"
            android:text="@string/ready"
            android:textColor="@color/black"

            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_player4"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>