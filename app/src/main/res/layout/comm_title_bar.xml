<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/comm_back_button"
        android:layout_width="55dp"
        android:layout_height="40dp"

        android:paddingStart="9dp"
        android:paddingEnd="9dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"

        android:layout_marginTop="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="18dp"

        android:src="@drawable/icon_back_button"

        android:background="@drawable/shape_back_button"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/comm_title"
        />

    <TextView
        android:id="@+id/comm_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"

        android:layout_marginStart="14dp"
        android:fontFamily="@font/orbitron_bold"
        android:letterSpacing="0.1"
        android:textSize="22dp"
        android:textColor="@color/black"

        app:layout_constraintTop_toTopOf="@id/comm_back_button"
        app:layout_constraintBottom_toBottomOf="@id/comm_back_button"
        app:layout_constraintStart_toEndOf="@id/comm_back_button"
        app:layout_constraintEnd_toEndOf="parent"

        tools:text="@string/title_TIME_ATTACK"
        />




</androidx.constraintlayout.widget.ConstraintLayout>
